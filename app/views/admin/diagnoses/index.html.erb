<div class="row">
  <div class="col-md-6">
    <h1>Diagnosis</h1>
  </div>
  <div class="col-md-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_admin_diagnosis_path %>">New Diagnosis</a>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diagnoses.each do |diagnosis| %>
      <tr>
        <td><%= diagnosis.name %></td>
        <td>
          <a href="<%= edit_admin_diagnosis_path(diagnosis) %>" class="btn btn-outline-info">
            Edit
          </a>
          <a href="<%= admin_diagnosis_path(diagnosis) %>" data-method="DELETE" class="btn btn-outline-danger"
             data-confirm="Are you sure?">
            Delete
          </a>
        </td>
    <% end %>
  </tbody>
</table>

<br>

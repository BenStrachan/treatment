
<div class="row">
  <div class="col-md-6">
    <h1>Test</h1>
  </div>
  <div class="col-md-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_admin_test_path %>">New Test</a>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= test.description %></td>
        <td>
          <a href="<%= edit_admin_test_path(test) %>" class="btn btn-outline-info">
            Edit
          </a>
          <a href="<%= admin_test_path(test) %>" data-method="DELETE" class="btn btn-outline-danger"
             data-confirm="Are you sure?">
            Delete
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= simple_form_for [:admin, @test] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :question %>
    <%= f.input :result_type %>
    <%= f.input :result_unit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<div class="row">
  <div class="col-md-6">
    <h1>Regions</h1>
  </div>
  <div class="col-md-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_admin_region_path %>">New Regions</a>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td>
          <a href="<%= edit_admin_region_path(region) %>" class="btn btn-outline-info">
            Edit
          </a>
          <a href="<%= admin_region_path(region) %>" data-method="DELETE" class="btn btn-outline-danger"
             data-confirm="Are you sure?">
            Delete
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
